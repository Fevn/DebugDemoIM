<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  
                                                                

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/activity_parameter_setting_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context="cn.rongcloud.um.ui.ParameterSettingActivity">

        <cn.rongcloud.um.widget.TopBar
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="@string/rc_conversationlist_text_parameter_title"
            app:rightText="@string/text_save" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:layout_marginHorizontal="16dp"
            android:text="@string/rc_conversationlist_tigs" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="需要显示的会话类型" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp">

            <CheckBox
                android:id="@+id/cb_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rc_conversation_private" />

            <CheckBox
                android:id="@+id/cb_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="@string/rc_conversation_group" />

            <CheckBox
                android:id="@+id/cb_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="@string/rc_conversation_system" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="需要聚合显示的会话类型" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp">

            <CheckBox
                android:id="@+id/cb_private_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rc_conversation_private" />

            <CheckBox
                android:id="@+id/cb_group_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="@string/rc_conversation_group" />

            <CheckBox
                android:id="@+id/cb_system_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="@string/rc_conversation_system" />
        </LinearLayout>

    </LinearLayout>
         